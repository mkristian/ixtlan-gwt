<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
  xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui"
  xmlns:d="urn:import:com.google.gwt.user.datepicker.client"
  xmlns:i="urn:import:de.mkristian.ixtlan.gwt.ui"
  xmlns:m="urn:import:com.googlecode.mgwt.ui.client.widget">
 
  <m:WidgetList round='true'>

    <g:FlowPanel ui:field="signature">
      <g:Label>id: </g:Label>
      <g:NumberLabel ui:field="id" />
      <g:Label>created at: </g:Label>
      <g:DateLabel ui:field="createdAt" predefinedFormat="DATE_TIME_MEDIUM"/>
      <g:Label>created by: </g:Label>
      <i:UserLabel ui:field="createdBy" />
    </g:FlowPanel>

    <m:FormListEntry text="Login">
      <m:MTextBox ui:field="login"/>
    </m:FormListEntry>
    
    <m:FormListEntry text="Message">
      <m:MTextBox ui:field="message"/>
    </m:FormListEntry>
    
    <m:FormListEntry text="HTTP Info">
      <m:MTextBox ui:field="httpInfo"/>
    </m:FormListEntry>

  </m:WidgetList>

</ui:UiBinder>
